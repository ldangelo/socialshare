<h2>Show Post</h2>

<ul>

  <li>
    <strong>Url:</strong>
    <%= @post.url %>
  </li>

  <li>
    <strong>Comment:</strong>
    <%= @post.comment %>
  </li>

  <li>
    <strong>Shared:</strong>
    <%= @post.shared %>
  </li>

</ul>

<span><%= link "Edit", to: post_path(@conn, :edit, @post) %></span>
<span><%= link "Back", to: post_path(@conn, :index) %></span>
